@model WebProgramlamaOdev.ViewModels.AppointmentListViewModel

@{
    ViewData["Title"] = "Randevu Detayları";
    Layout = "_LayoutAdminScreen";
}


<style>
    .card {
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
    }

    .table-borderless th {
        padding: 0.75rem 0.5rem;
        font-weight: 600;
    }

    .table-borderless td {
        padding: 0.75rem 0.5rem;
    }

    .badge {
        font-size: 0.9rem;
        padding: 0.5rem 0.75rem;
    }

    .btn-lg {
        margin: 0.25rem;
    }
</style>


<div class="container mt-4">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            
            <!-- Başlık -->
            <div class="card mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">
                        <i class="fas fa-calendar-check"></i> Randevu Detayları
                    </h4>
                    <span class="@Model.StatusBadgeClass">
                        @Model.StatusText
                    </span>
                </div>
            </div>

            <!-- Detay Kartları -->
            <div class="row">
                
                <!-- Üye Bilgileri -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-info text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-user"></i> Üye Bilgileri
                            </h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%">
                                        <i class="fas fa-id-badge text-primary"></i> ID:
                                    </th>
                                    <td>#@Model.MemberId</td>
                                </tr>
                                <tr>
                                    <th>
                                        <i class="fas fa-user text-primary"></i> Ad Soyad:
                                    </th>
                                    <td><strong>@Model.MemberName</strong></td>
                                </tr>
                                <tr>
                                    <th>
                                        <i class="fas fa-envelope text-primary"></i> E-posta:
                                    </th>
                                    <td>
                                        <a href="mailto:@Model.MemberEmail">@Model.MemberEmail</a>
                                    </td>
                                </tr>
                                <tr>
                                    <th>
                                        <i class="fas fa-phone text-primary"></i> Telefon:
                                    </th>
                                    <td>
                                        <a href="tel:@Model.MemberPhone">@Model.MemberPhone</a>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Antrenör Bilgileri -->
                <div class="col-md-6 mb-4">
                    <div class="card h-100">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="fas fa-dumbbell"></i> Antrenör Bilgileri
                            </h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-borderless">
                                <tr>
                                    <th width="40%">
                                        <i class="fas fa-id-badge text-success"></i> ID:
                                    </th>
                                    <td>#@Model.TrainerId</td>
                                </tr>
                                <tr>
                                    <th>
                                        <i class="fas fa-user text-success"></i> Ad Soyad:
                                    </th>
                                    <td><strong>@Model.TrainerName</strong></td>
                                </tr>
                                <tr>
                                    <th>
                                        <i class="fas fa-star text-success"></i> Uzmanlık:
                                    </th>
                                    <td>
                                        <span class="badge bg-success">@Model.TrainerSpecialization</span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>

            </div>

            <!-- Randevu Bilgileri -->
            <div class="row">
                <div class="col-md-12 mb-4">
                    <div class="card">
                        <div class="card-header bg-warning text-dark">
                            <h5 class="mb-0">
                                <i class="fas fa-calendar-alt"></i> Randevu Bilgileri
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <table class="table table-borderless">
                                        <tr>
                                            <th width="40%">
                                                <i class="fas fa-hashtag text-warning"></i> Randevu ID:
                                            </th>
                                            <td><strong>#@Model.Id</strong></td>
                                        </tr>
                                        <tr>
                                            <th>
                                                <i class="fas fa-concierge-bell text-warning"></i> Hizmet:
                                            </th>
                                            <td><strong>@Model.ServiceName</strong></td>
                                        </tr>
                                        <tr>
                                            <th>
                                                <i class="fas fa-calendar text-warning"></i> Tarih:
                                            </th>
                                            <td>
                                                <strong>@Model.FormattedDate</strong>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                <i class="fas fa-clock text-warning"></i> Saat:
                                            </th>
                                            <td>
                                                <strong>@Model.FormattedTime</strong>
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                                <div class="col-md-6">
                                    <table class="table table-borderless">
                                        <tr>
                                            <th width="40%">
                                                <i class="fas fa-info-circle text-warning"></i> Durum:
                                            </th>
                                            <td>
                                                <span class="@Model.StatusBadgeClass">
                                                    @Model.StatusText
                                                </span>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                <i class="fas fa-check-circle text-warning"></i> Onaylandı mı?:
                                            </th>
                                            <td>
                                                @if (Model.IsConfirmed)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check"></i> Evet
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-times"></i> Hayır
                                                    </span>
                                                }
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                <i class="fas fa-money-bill-wave text-warning"></i> Ücret:
                                            </th>
                                            <td>
                                                <strong class="text-success fs-5">
                                                    @Model.TotalPrice.ToString("C")
                                                </strong>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                <i class="fas fa-calendar-plus text-warning"></i> Oluşturulma:
                                            </th>
                                            <td>
                                                @Model.CreatedDate.ToString("dd.MM.yyyy HH:mm")
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- İşlem Butonları -->
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body text-center">
                            
                            <!-- Geri Dön -->
                            <a asp-action="ShowAppointments" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> Geri Dön
                            </a>

                            <!-- Onayla (Sadece Pending ise) -->
                            @if (Model.CanConfirm)
                            {
                                <form asp-action="ConfirmAppointment" 
                                      asp-route-id="@Model.Id" 
                                      method="post" 
                                      class="d-inline"
                                      onsubmit="return confirm('Bu randevuyu onaylamak istediğinize emin misiniz?');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-success btn-lg">
                                        <i class="fas fa-check"></i> Randevuyu Onayla
                                    </button>
                                </form>
                            }

                            <!-- İptal Et (Pending veya Confirmed ise) -->
                            @if (Model.CanCancel)
                            {
                                <button type="button" 
                                        class="btn btn-warning btn-lg"
                                        data-bs-toggle="modal" 
                                        data-bs-target="#cancelModal">
                                    <i class="fas fa-ban"></i> Randevuyu İptal Et
                                </button>
                            }

                            <!-- Sil (Cancelled veya Pending ise) -->
                            @if (Model.Status == "Cancelled" || Model.Status == "Pending")
                            {
                                <form asp-action="DeleteAppointment" 
                                      asp-route-id="@Model.Id" 
                                      method="post" 
                                      class="d-inline"
                                      onsubmit="return confirm('Bu randevuyu silmek istediğinize emin misiniz? Bu işlem geri alınamaz!');">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger btn-lg">
                                        <i class="fas fa-trash"></i> Randevuyu Sil
                                    </button>
                                </form>
                            }

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<!-- İptal Modal -->
<div class="modal fade" id="cancelModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">
                    <i class="fas fa-ban"></i> Randevuyu İptal Et
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="CancelAppointment" asp-route-id="@Model.Id" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>@Model.MemberName</strong> adlı üyenin 
                        <strong>@Model.FormattedDateTime</strong> tarihli randevusunu 
                        iptal etmek istediğinize emin misiniz?
                    </div>
                    <div class="form-group">
                        <label for="cancelReason" class="form-label">
                            <i class="fas fa-comment"></i> İptal Nedeni (Opsiyonel):
                        </label>
                        <textarea class="form-control" 
                                  id="cancelReason" 
                                  name="reason" 
                                  rows="4" 
                                  placeholder="İptal nedeni yazabilirsiniz..."></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="fas fa-times"></i> Vazgeç
                    </button>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-ban"></i> İptal Et
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

