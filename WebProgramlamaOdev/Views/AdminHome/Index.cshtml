@model WebProgramlamaOdev.ViewModels.AdminDashboardViewModel

@{
    ViewData["Title"] = "Admin Panel";
    Layout = "_LayoutAdminScreen";
}

<style>
    .dashboard-container {
        padding: 20px;
    }

    .page-header {
        margin-bottom: 40px;
        text-align: center;
    }

        .page-header h1 {
            color: #FF8C42;
            font-size: 36px;
            font-weight: bold;
            margin-bottom: 10px;
        }

        .page-header p {
            color: #666;
            font-size: 16px;
        }

    /* İstatistik Kartları Grid */
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
        margin-bottom: 40px;
    }

    .stat-card {
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        cursor: pointer;
    }

        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
        }

        /* Arka plan gradient */
        .stat-card::before {
            content: '';
            position: absolute;
            top: 0;
            right: 0;
            width: 150px;
            height: 150px;
            background: linear-gradient(135deg, rgba(255, 140, 66, 0.1) 0%, rgba(255, 179, 128, 0.05) 100%);
            border-radius: 50%;
            transform: translate(30%, -30%);
        }

    .stat-card-content {
        position: relative;
        z-index: 1;
    }

    .stat-icon-wrapper {
        width: 70px;
        height: 70px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
        transition: all 0.3s ease;
    }

    .stat-card:hover .stat-icon-wrapper {
        transform: scale(1.1) rotate(5deg);
    }

    .stat-icon {
        font-size: 32px;
        color: white;
    }

    /* Her kart için farklı renk */
    .stat-card.gym .stat-icon-wrapper {
        background: linear-gradient(135deg, #FF8C42 0%, #FFB380 100%);
    }

    .stat-card.trainer .stat-icon-wrapper {
        background: linear-gradient(135deg, #28a745 0%, #5cb85c 100%);
    }

    .stat-card.service .stat-icon-wrapper {
        background: linear-gradient(135deg, #007bff 0%, #4dabf7 100%);
    }

    .stat-card.appointment .stat-icon-wrapper {
        background: linear-gradient(135deg, #ffc107 0%, #ffd54f 100%);
    }

    .stat-card.member .stat-icon-wrapper {
        background: linear-gradient(135deg, #6f42c1 0%, #9775fa 100%);
    }

    .stat-title {
        font-size: 14px;
        color: #888;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 12px;
    }

    .stat-value {
        font-size: 42px;
        font-weight: bold;
        margin-bottom: 8px;
        display: flex;
        align-items: baseline;
        gap: 10px;
    }

    .stat-card.gym .stat-value {
        color: #FF8C42;
    }

    .stat-card.trainer .stat-value {
        color: #28a745;
    }

    .stat-card.service .stat-value {
        color: #007bff;
    }

    .stat-card.appointment .stat-value {
        color: #ffc107;
    }

    .stat-card.member .stat-value {
        color: #6f42c1;
    }

    .stat-total {
        font-size: 14px;
        color: #999;
        font-weight: normal;
    }

    .stat-label {
        font-size: 13px;
        color: #666;
        display: flex;
        align-items: center;
        gap: 8px;
    }

        .stat-label i {
            font-size: 12px;
        }

    /* Hızlı Erişim Butonları */
    .quick-actions {
        background: white;
        border-radius: 12px;
        padding: 30px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    }

        .quick-actions h3 {
            color: #333;
            font-size: 20px;
            font-weight: 600;
            margin-bottom: 20px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

            .quick-actions h3 i {
                color: #FF8C42;
            }

    .action-buttons {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 15px;
    }

    .action-btn {
        padding: 15px 20px;
        border: 2px solid #e0e0e0;
        border-radius: 8px;
        background: white;
        color: #333;
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 12px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .action-btn i {
            font-size: 20px;
            color: #FF8C42;
        }

        .action-btn:hover {
            border-color: #FF8C42;
            background: #fff5f0;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(255, 140, 66, 0.2);
            color: #FF8C42;
        }

    /* Alert Mesajları */
    .alert-custom {
        padding: 15px 20px;
        border-radius: 8px;
        margin-bottom: 25px;
        display: flex;
        align-items: center;
        gap: 12px;
        animation: slideDown 0.3s ease;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border-left: 4px solid #dc3545;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .stats-grid {
            grid-template-columns: 1fr;
        }

        .page-header h1 {
            font-size: 28px;
        }

        .stat-value {
            font-size: 36px;
        }

        .action-buttons {
            grid-template-columns: 1fr;
        }
    }
</style>

<!-- Hata Mesajı -->
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert-custom alert-danger">
        <i class="fas fa-exclamation-triangle" style="font-size: 20px;"></i>
        <span>@TempData["ErrorMessage"]</span>
    </div>
}

<div class="dashboard-container">
    <!-- Sayfa Başlığı -->
    <div class="page-header">
        <h1>
            <i class="fas fa-chart-line"></i>
            Yönetim Paneli
        </h1>
        <p>Sistem istatistiklerine göz atın ve hızlı erişim yapın</p>
    </div>

    <!-- İstatistik Kartları -->
    <div class="stats-grid">
       

        <!-- Aktif Antrenörler -->
        <div class="stat-card trainer">
            <div class="stat-card-content">
                <div class="stat-icon-wrapper">
                    <i class="fas fa-user-tie stat-icon"></i>
                </div>
                <div class="stat-title">Aktif Antrenörler</div>
                <div class="stat-value">
                    @Model.ActiveTrainerCount
                    <span class="stat-total">/ @Model.TotalTrainerCount</span>
                </div>
                <div class="stat-label">
                    <i class="fas fa-info-circle"></i>
                    Toplam antrenör sayısı
                </div>
            </div>
        </div>

        <!-- Aktif Servisler -->
        <div class="stat-card service">
            <div class="stat-card-content">
                <div class="stat-icon-wrapper">
                    <i class="fas fa-dumbbell stat-icon"></i>
                </div>
                <div class="stat-title">Aktif Servisler</div>
                <div class="stat-value">
                    @Model.ActiveServiceCount
                    <span class="stat-total">/ @Model.TotalServiceCount</span>
                </div>
                <div class="stat-label">
                    <i class="fas fa-info-circle"></i>
                    Toplam servis sayısı
                </div>
            </div>
        </div>

        <!-- Aktif Randevular -->
        <div class="stat-card appointment">
            <div class="stat-card-content">
                <div class="stat-icon-wrapper">
                    <i class="fas fa-calendar-check stat-icon"></i>
                </div>
                <div class="stat-title">Aktif Randevular</div>
                <div class="stat-value">
                    @Model.ActiveAppointmentCount
                    <span class="stat-total">/ @Model.TotalAppointmentCount</span>
                </div>
                <div class="stat-label">
                    <i class="fas fa-info-circle"></i>
                    Onaylanmış ve bekleyen randevular
                </div>
            </div>
        </div>

        <!-- Aktif Üyeler -->
        <div class="stat-card member">
            <div class="stat-card-content">
                <div class="stat-icon-wrapper">
                    <i class="fas fa-users stat-icon"></i>
                </div>
                <div class="stat-title">Aktif Üyeler</div>
                <div class="stat-value">
                    @Model.ActiveMemberCount
                    <span class="stat-total">/ @Model.TotalMemberCount</span>
                </div>
                <div class="stat-label">
                    <i class="fas fa-info-circle"></i>
                    Toplam üye sayısı
                </div>
            </div>
        </div>
    </div>

    <!-- Hızlı Erişim Butonları -->
    <div class="quick-actions">
        <h3>
            <i class="fas fa-bolt"></i>
            Hızlı Erişim
        </h3>
        <div class="action-buttons">
            
            <a asp-controller="AdminTrainerManagement" asp-action="ShowTrainers" class="action-btn">
                <i class="fas fa-user-tie"></i>
                <span>Antrenörler</span>
            </a>
            <a asp-controller="AdminServiceManagement" asp-action="ShowServices" class="action-btn">
                <i class="fas fa-dumbbell"></i>
                <span>Servisler</span>
            </a>
            <a asp-controller="AdminAppointmentManagement" asp-action="ShowAppointments" class="action-btn">
                <i class="fas fa-calendar-check"></i>
                <span>Randevular</span>
            </a>
            <a asp-controller="AdminMemberManagement" asp-action="ShowMembers" class="action-btn">
                <i class="fas fa-users"></i>
                <span>Üyeler</span>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Otomatik mesaj kapatma (5 saniye sonra)
        setTimeout(function () {
            const alerts = document.querySelectorAll('.alert-custom');
            alerts.forEach(function (alert) {
                alert.style.animation = 'fadeOut 0.5s ease';
                setTimeout(function () {
                    alert.remove();
                }, 500);
            });
        }, 5000);

        // Fade out animasyonu
        const style = document.createElement('style');
        style.textContent = `
            @@keyframes fadeOut {
                from { opacity: 1; transform: translateY(0); }
                to { opacity: 0; transform: translateY(-10px); }
            }
        `;
        document.head.appendChild(style);

        // Kartlara tıklama ile ilgili sayfaya gitme
        document.querySelectorAll('.stat-card').forEach(card => {
            card.addEventListener('click', function() {
               if (this.classList.contains('trainer')) {
                    window.location.href = '@Url.Action("ShowTrainers", "AdminHome")';
                } else if (this.classList.contains('service')) {
                    window.location.href = '@Url.Action("ShowServices", "AdminServiceManagement")';
                } else if (this.classList.contains('appointment')) {
                    window.location.href = '@Url.Action("ShowAppointments", "AdminHome")';
                } else if (this.classList.contains('member')) {
                    window.location.href = '@Url.Action("ShowMembers", "AdminHome")';
                }
            });
        });
    </script>
}
