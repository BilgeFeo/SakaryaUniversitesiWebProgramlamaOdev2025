@model WebProgramlamaOdev.ViewModels.MemberDashboardViewModel

@{
    ViewData["Title"] = "Ana Sayfa";
    Layout = "_LayoutMemberScreen";
}

<style>
    .welcome-banner {
        background: linear-gradient(135deg, #FF8C42 0%, #FFB380 100%);
        color: white;
        padding: 30px;
        border-radius: 10px;
        margin-bottom: 30px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        box-shadow: 0 4px 15px rgba(255, 140, 66, 0.3);
    }

    .profile-card {
        border-left: 5px solid #FF8C42;
        transition: transform 0.3s;
    }

        .profile-card:hover {
            transform: translateY(-5px);
        }

    .stat-box {
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        margin-bottom: 15px;
        border: 1px solid #eee;
    }

    .stat-value {
        font-size: 24px;
        font-weight: bold;
        color: #FF8C42;
    }

    .stat-label {
        color: #666;
        font-size: 13px;
    }

    .info-row {
        display: flex;
        justify-content: space-between;
        padding: 12px 0;
        border-bottom: 1px solid #eee;
    }

        .info-row:last-child {
            border-bottom: none;
        }

    .info-label {
        font-weight: 600;
        color: #555;
    }

    .info-value {
        color: #333;
    }
</style>

<div class="welcome-banner">
    <div>
        <h2 class="mb-1">Hoş Geldin, @Model.FullName!</h2>
        <p class="mb-0 opacity-75">Spora başlamak için harika bir gün.</p>
    </div>
    <div class="d-none d-md-block">
        <i class="fas fa-running fa-4x opacity-50"></i>
    </div>
</div>

<div class="row">
    <div class="col-lg-8 mb-4">
        <div class="content-card profile-card h-100">
            <h4 class="page-title mb-4">
                <i class="fas fa-id-card text-primary me-2"></i>Kişisel Bilgiler
            </h4>

            <div class="row">
                <div class="col-md-6">
                    <div class="info-row">
                        <span class="info-label"><i class="fas fa-user me-2 text-muted"></i>Ad Soyad</span>
                        <span class="info-value">@Model.FullName</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label"><i class="fas fa-envelope me-2 text-muted"></i>E-posta</span>
                        <span class="info-value">@Model.Email</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label"><i class="fas fa-phone me-2 text-muted"></i>Telefon</span>
                        <span class="info-value">@Model.PhoneNumber</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label"><i class="fas fa-venus-mars me-2 text-muted"></i>Cinsiyet</span>
                        <span class="info-value">@Model.Gender</span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="info-row">
                        <span class="info-label"><i class="fas fa-birthday-cake me-2 text-muted"></i>Doğum Tarihi</span>
                        <span class="info-value">
                            @(Model.DateOfBirth.HasValue? Model.DateOfBirth.Value.ToString("dd.MM.yyyy") : "-")
                        </span>
                    </div>
                    <div class="info-row">
                        <span class="info-label"><i class="fas fa-hourglass-half me-2 text-muted"></i>Yaş</span>
                        <span class="info-value">@Model.Age</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label"><i class="fas fa-ruler-vertical me-2 text-muted"></i>Boy</span>
                        <span class="info-value">@Model.HeightDisplay</span>
                    </div>
                    <div class="info-row">
                        <span class="info-label"><i class="fas fa-weight me-2 text-muted"></i>Kilo</span>
                        <span class="info-value">@Model.WeightDisplay</span>
                    </div>
                </div>
            </div>

            <div class="mt-4 pt-3 border-top text-end">
                <a asp-action="UpdateProfile" class="btn btn-outline-primary btn-sm">
                    <i class="fas fa-edit me-1"></i> Bilgilerimi Güncelle
                </a>
            </div>
        </div>
    </div>

    
</div>

