@model WebProgramlamaOdev.DTOs.UpdateTrainerProfileDto

@{
    ViewData["Title"] = "Bilgilerimi Güncelle";
    Layout = "_LayoutTrainerScreen";
}

<style>
    /* ... (Aynı style kodları) ... */
    .profile-container {
        max-width: 900px;
        margin: 0 auto;
    }

    .profile-card {
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .profile-header {
        background: linear-gradient(135deg, #FF8C42 0%, #FFB380 100%);
        color: white;
        padding: 25px 30px;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .profile-header i {
        font-size: 32px;
    }

    .profile-header h2 {
        margin: 0;
        font-size: 24px;
        font-weight: 600;
    }

    .profile-body {
        padding: 30px;
    }

    .form-section {
        margin-bottom: 30px;
    }

    .section-title {
        color: #FF8C42;
        font-size: 18px;
        font-weight: 600;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 2px solid #FFB380;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .form-label {
        display: block;
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-label i {
        color: #FF8C42;
        margin-right: 8px;
        width: 16px;
    }

    .form-label .required {
        color: #dc3545;
        margin-left: 4px;
    }

    .form-control {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #e0e0e0;
        border-radius: 6px;
        font-size: 14px;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        outline: none;
        border-color: #FF8C42;
        box-shadow: 0 0 0 3px rgba(255, 140, 66, 0.1);
    }

    .form-control.is-invalid {
        border-color: #dc3545;
    }

    .invalid-feedback {
        color: #dc3545;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
    }

    .info-box {
        background: linear-gradient(135deg, #e7f3ff 0%, #f0f8ff 100%);
        border-left: 4px solid #2196F3;
        padding: 15px 20px;
        border-radius: 6px;
        margin-bottom: 25px;
    }

    .info-box i {
        color: #2196F3;
        margin-right: 10px;
        font-size: 18px;
    }

    .info-box p {
        margin: 0;
        color: #0d47a1;
        font-size: 14px;
        display: flex;
        align-items: center;
    }

    .gym-display {
        background: #f8f9fa;
        border: 2px solid #e0e0e0;
        border-radius: 6px;
        padding: 12px 15px;
        color: #666;
        font-size: 14px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .gym-display i {
        color: #FF8C42;
        font-size: 18px;
    }

    .checkbox-wrapper {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 15px;
        background: #f8f9fa;
        border-radius: 6px;
        border: 2px solid #e0e0e0;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .checkbox-wrapper:hover {
        background: #fff5f0;
        border-color: #FF8C42;
    }

    .checkbox-wrapper input[type="checkbox"] {
        width: 20px;
        height: 20px;
        cursor: pointer;
        accent-color: #FF8C42;
    }

    .checkbox-wrapper label {
        cursor: pointer;
        font-weight: 500;
        margin: 0;
        color: #333;
        flex: 1;
    }

    .checkbox-wrapper .checkbox-description {
        font-size: 13px;
        color: #666;
        margin-top: 4px;
    }

    .form-footer {
        display: flex;
        justify-content: space-between;
        gap: 15px;
        padding-top: 25px;
        border-top: 2px solid #e0e0e0;
        margin-top: 30px;
    }

    .btn {
        padding: 12px 30px;
        border: none;
        border-radius: 6px;
        font-weight: 600;
        font-size: 15px;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 10px;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .btn-primary {
        background: linear-gradient(135deg, #FF8C42 0%, #FFB380 100%);
        color: white;
        box-shadow: 0 4px 15px rgba(255, 140, 66, 0.3);
    }

    .btn-primary:hover {
        background: linear-gradient(135deg, #e67a2e 0%, #ff9f66 100%);
        color: white;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(255, 140, 66, 0.4);
    }

    .btn-secondary {
        background: #6c757d;
        color: white;
    }

    .btn-secondary:hover {
        background: #5a6268;
        color: white;
    }

    .alert {
        padding: 15px 20px;
        border-radius: 6px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 12px;
        animation: slideDown 0.3s ease;
    }

    @@keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border-left: 4px solid #28a745;
    }

    .alert-success i {
        color: #28a745;
        font-size: 20px;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border-left: 4px solid #dc3545;
    }

    .alert-danger i {
        color: #dc3545;
        font-size: 20px;
    }

    .alert-danger ul {
        margin: 5px 0 0 0;
        padding-left: 20px;
    }

    @@media (max-width: 768px) {
        .profile-body {
            padding: 20px;
        }

        .form-row {
            grid-template-columns: 1fr;
        }

        .form-footer {
            flex-direction: column;
        }

        .btn {
            width: 100%;
            justify-content: center;
        }
    }
</style>

<!-- Başarı/Hata Mesajları -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i>
        <span>@TempData["SuccessMessage"]</span>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle"></i>
        <span>@TempData["ErrorMessage"]</span>
    </div>
}

<div class="profile-container">
    <div class="profile-card">
        <div class="profile-header">
            <i class="fas fa-user-edit"></i>
            <div>
                <h2>Profil Bilgilerim</h2>
                <small style="opacity: 0.9;">Kişisel bilgilerinizi güncelleyin</small>
            </div>
        </div>

        <div class="profile-body">
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle"></i>
                    <div>
                        <strong>Lütfen aşağıdaki hataları düzeltin:</strong>
                        <ul>
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                </div>
            }

            <div class="info-box">
                <p>
                    <i class="fas fa-info-circle"></i>
                    Bu sayfada kişisel bilgilerinizi güncelleyebilirsiniz. Spor salonu bilgisi değiştirilemez.
                </p>
            </div>

            <form asp-controller="TrainerAccountManagement" asp-action="UpdateProfile" method="post">
                @Html.AntiForgeryToken()
                
                @* ✅ Sadece zorunlu hidden fieldlar *@
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="UserId" />
                @* GymId ve GymName HIDDEN OLARAK GÖNDERİLMİYOR - Database'den alınıyor *@

                <!-- Kişisel Bilgiler -->
                <div class="form-section">
                    <div class="section-title">
                        <i class="fas fa-user"></i>
                        <span>Kişisel Bilgiler</span>
                    </div>

                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label" asp-for="FirstName">
                                <i class="fas fa-user"></i>
                                Ad
                                <span class="required">*</span>
                            </label>
                            <input type="text"
                                   class="form-control @(ViewData.ModelState["FirstName"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                   asp-for="FirstName"
                                   placeholder="Adınızı girin" />
                            <span asp-validation-for="FirstName" class="invalid-feedback"></span>
                        </div>

                        <div class="form-group">
                            <label class="form-label" asp-for="LastName">
                                <i class="fas fa-user"></i>
                                Soyad
                                <span class="required">*</span>
                            </label>
                            <input type="text"
                                   class="form-control @(ViewData.ModelState["LastName"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                   asp-for="LastName"
                                   placeholder="Soyadınızı girin" />
                            <span asp-validation-for="LastName" class="invalid-feedback"></span>
                        </div>
                    </div>
                </div>

                <!-- İletişim Bilgileri -->
                <div class="form-section">
                    <div class="section-title">
                        <i class="fas fa-address-book"></i>
                        <span>İletişim Bilgileri</span>
                    </div>

                    <div class="form-group">
                        <label class="form-label" asp-for="Email">
                            <i class="fas fa-envelope"></i>
                            E-posta Adresi
                            <span class="required">*</span>
                        </label>
                        <input type="email"
                               class="form-control @(ViewData.ModelState["Email"]?.Errors.Count > 0 ? "is-invalid" : "")"
                               asp-for="Email"
                               placeholder="ornek@email.com" />
                        <span asp-validation-for="Email" class="invalid-feedback"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label" asp-for="PhoneNumber">
                            <i class="fas fa-phone"></i>
                            Telefon Numarası
                            <span class="required">*</span>
                        </label>
                        <input type="tel"
                               class="form-control @(ViewData.ModelState["PhoneNumber"]?.Errors.Count > 0 ? "is-invalid" : "")"
                               asp-for="PhoneNumber"
                               placeholder="0555 123 4567" />
                        <span asp-validation-for="PhoneNumber" class="invalid-feedback"></span>
                    </div>
                </div>

                <!-- Meslek Bilgileri -->
                <div class="form-section">
                    <div class="section-title">
                        <i class="fas fa-dumbbell"></i>
                        <span>Antrenörlük Bilgileri</span>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-building"></i>
                            Çalıştığınız Spor Salonu
                        </label>
                        @* ✅ Sadece görüntüleme - Form submit edilmiyor *@
                        <div class="gym-display">
                            <i class="fas fa-building"></i>
                            <strong>@(Model.GymName ?? ViewBag.GymName ?? "Belirtilmemiş")</strong>
                            <span style="margin-left: auto; color: #999; font-size: 12px;">
                                <i class="fas fa-lock"></i>
                                Değiştirilemez
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="form-label" asp-for="Specialization">
                            <i class="fas fa-star"></i>
                            Uzmanlık Alanı
                        </label>
                        <textarea class="form-control @(ViewData.ModelState["Specialization"]?.Errors.Count > 0 ? "is-invalid" : "")"
                                  asp-for="Specialization"
                                  rows="3"
                                  placeholder="Örn: Fitness, Crossfit, Pilates, Yoga, vb."></textarea>
                        <span asp-validation-for="Specialization" class="invalid-feedback"></span>
                        <small style="color: #666; font-size: 13px; display: block; margin-top: 5px;">
                            Uzmanlık alanlarınızı virgülle ayırarak yazabilirsiniz.
                        </small>
                    </div>

                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-toggle-on"></i>
                            Durum
                        </label>
                        <div class="checkbox-wrapper">
                            <input type="checkbox" asp-for="IsActive" id="isActive" />
                            <label for="isActive">
                                <div>
                                    <strong>Aktif Antrenör</strong>
                                    <div class="checkbox-description">
                                        Aktif olduğunuzda üyeler sizi görebilir ve randevu alabilir.
                                    </div>
                                </div>
                            </label>
                            <i class="fas fa-check-circle" style="color: #28a745; font-size: 24px;" id="activeIcon"></i>
                        </div>
                    </div>
                </div>

                <!-- Form Butonları -->
                <div class="form-footer">
                    <a asp-controller="TrainerHome" asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i>
                        İptal / Geri Dön
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i>
                        Değişiklikleri Kaydet
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // IsActive checkbox için icon göster/gizle
        const isActiveCheckbox = document.getElementById('isActive');
        const activeIcon = document.getElementById('activeIcon');

        function updateActiveIcon() {
            if (isActiveCheckbox.checked) {
                activeIcon.style.display = 'block';
                activeIcon.style.color = '#28a745';
            } else {
                activeIcon.style.display = 'none';
            }
        }

        updateActiveIcon();
        isActiveCheckbox.addEventListener('change', updateActiveIcon);

        // Alert mesajlarını otomatik kapat
        setTimeout(function() {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function(alert) {
                alert.style.animation = 'fadeOut 0.5s ease';
                setTimeout(function() {
                    alert.remove();
                }, 500);
            });
        }, 5000);
    </script>

    <style>
        @@keyframes fadeOut {
            from {
                opacity: 1;
            }
            to {
                opacity: 0;
            }
        }
    </style>
}
