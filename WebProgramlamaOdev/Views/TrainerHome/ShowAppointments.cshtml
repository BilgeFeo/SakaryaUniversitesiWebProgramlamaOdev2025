@model List<WebProgramlamaOdev.ViewModels.TrainerAppointmentViewModel>

@{
    ViewData["Title"] = "Randevularım";
    Layout = "_LayoutTrainerScreen";
    var currentFilter = ViewBag.CurrentFilter as string ?? "all";
}

<style>
    .appointments-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 25px;
        flex-wrap: wrap;
        gap: 15px;
    }

    .appointments-header h2 {
        color: #333;
        font-size: 28px;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .appointments-header h2 i {
        color: #FF8C42;
    }

    .filter-buttons {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .btn-filter {
        padding: 8px 16px;
        border: 2px solid #e0e0e0;
        background: white;
        color: #666;
        border-radius: 6px;
        font-weight: 600;
        font-size: 14px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 6px;
    }

    .btn-filter:hover {
        border-color: #FF8C42;
        color: #FF8C42;
        background: #fff5f0;
    }

    .btn-filter.active {
        background: linear-gradient(135deg, #FF8C42 0%, #FFB380 100%);
        color: white;
        border-color: #FF8C42;
    }

    .appointments-table {
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .table {
        margin: 0;
        width: 100%;
    }

    .table thead {
        background: linear-gradient(135deg, #FF8C42 0%, #FFB380 100%);
        color: white;
    }

    .table thead th {
        padding: 15px;
        font-weight: 600;
        border: none;
    }

    .table tbody td {
        padding: 15px;
        vertical-align: middle;
        border-bottom: 1px solid #f0f0f0;
    }

    .table tbody tr:hover {
        background: #fff5f0;
    }

    .member-info {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .member-name {
        font-weight: 600;
        color: #333;
        font-size: 15px;
    }

    .member-contact {
        font-size: 13px;
        color: #666;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .member-contact i {
        color: #FF8C42;
        font-size: 12px;
    }

    .service-name {
        font-weight: 600;
        color: #333;
    }

    .appointment-datetime {
        display: flex;
        flex-direction: column;
        gap: 4px;
    }

    .date-text {
        font-weight: 600;
        color: #333;
        font-size: 14px;
    }

    .time-text {
        color: #666;
        font-size: 13px;
        display: flex;
        align-items: center;
        gap: 5px;
    }

    .time-text i {
        color: #FF8C42;
    }

    .status-badge {
        padding: 6px 12px;
        border-radius: 20px;
        font-size: 12px;
        font-weight: 600;
        display: inline-block;
    }

    .status-pending {
        background: #fff3cd;
        color: #856404;
    }

    .status-confirmed {
        background: #d4edda;
        color: #155724;
    }

    .status-cancelled {
        background: #f8d7da;
        color: #721c24;
    }

    .action-buttons {
        display: flex;
        gap: 5px;
        flex-wrap: wrap;
    }

    .btn-action {
        padding: 6px 12px;
        border: none;
        border-radius: 4px;
        font-size: 12px;
        font-weight: 600;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 5px;
        transition: all 0.3s ease;
    }

    .btn-confirm {
        background: #28a745;
        color: white;
    }

    .btn-confirm:hover {
        background: #218838;
    }

    .btn-reject {
        background: #ffc107;
        color: #333;
    }

    .btn-reject:hover {
        background: #e0a800;
    }

    .btn-delete {
        background: #dc3545;
        color: white;
    }

    .btn-delete:hover {
        background: #c82333;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        background: white;
        border-radius: 10px;
    }

    .empty-state i {
        font-size: 80px;
        color: #FFB380;
        margin-bottom: 20px;
    }

    .alert {
        padding: 15px 20px;
        border-radius: 6px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border-left: 4px solid #28a745;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border-left: 4px solid #dc3545;
    }

    @@media (max-width: 768px) {
        .appointments-header {
            flex-direction: column;
            align-items: stretch;
        }

        .filter-buttons {
            justify-content: center;
        }

        .table {
            font-size: 13px;
        }

        .table thead th,
        .table tbody td {
            padding: 10px 8px;
        }

        .action-buttons {
            flex-direction: column;
        }

        .btn-action {
            width: 100%;
            justify-content: center;
        }
    }
</style>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i>
        <span>@TempData["SuccessMessage"]</span>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle"></i>
        <span>@TempData["ErrorMessage"]</span>
    </div>
}

<div class="appointments-header">
    <h2>
        <i class="fas fa-calendar-check"></i>
        Randevularım (@Model.Count)
    </h2>
    <div class="filter-buttons">
        <a asp-action="ShowAppointments" asp-route-filter="all" 
           class="btn-filter @(currentFilter == "all" ? "active" : "")">
            <i class="fas fa-list"></i>
            Tümü
        </a>
        <a asp-action="ShowAppointments" asp-route-filter="pending" 
           class="btn-filter @(currentFilter == "pending" ? "active" : "")">
            <i class="fas fa-clock"></i>
            Bekleyen
        </a>
        <a asp-action="ShowAppointments" asp-route-filter="confirmed" 
           class="btn-filter @(currentFilter == "confirmed" ? "active" : "")">
            <i class="fas fa-check-circle"></i>
            Onaylı
        </a>
        <a asp-action="ShowAppointments" asp-route-filter="today" 
           class="btn-filter @(currentFilter == "today" ? "active" : "")">
            <i class="fas fa-calendar-day"></i>
            Bugün
        </a>
        <a asp-action="ShowAppointments" asp-route-filter="upcoming" 
           class="btn-filter @(currentFilter == "upcoming" ? "active" : "")">
            <i class="fas fa-calendar-alt"></i>
            Yaklaşan
        </a>
        <a asp-action="ShowAppointments" asp-route-filter="cancelled" 
           class="btn-filter @(currentFilter == "cancelled" ? "active" : "")">
            <i class="fas fa-times-circle"></i>
            İptal
        </a>
    </div>
</div>

@if (Model != null && Model.Any())
{
    <div class="appointments-table">
        <table class="table">
            <thead>
                <tr>
                    <th>Üye</th>
                    <th>Hizmet</th>
                    <th>Tarih & Saat</th>
                    <th>Durum</th>
                    <th>Fiyat</th>
                    <th style="text-align: center;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var appointment in Model)
                {
                    <tr>
                        <td>
                            <div class="member-info">
                                <div class="member-name">
                                    <i class="fas fa-user" style="color: #FF8C42;"></i>
                                    @appointment.MemberName
                                </div>
                                <div class="member-contact">
                                    <i class="fas fa-envelope"></i>
                                    @appointment.MemberEmail
                                </div>
                                <div class="member-contact">
                                    <i class="fas fa-phone"></i>
                                    @appointment.MemberPhone
                                </div>
                            </div>
                        </td>
                        <td>
                            <div class="service-name">
                                <i class="fas fa-dumbbell" style="color: #28a745;"></i>
                                @appointment.ServiceName
                            </div>
                        </td>
                        <td>
                            <div class="appointment-datetime">
                                <div class="date-text">
                                    <i class="fas fa-calendar" style="color: #FF8C42;"></i>
                                    @appointment.AppointmentDate.ToString("dd MMMM yyyy")
                                </div>
                                <div class="time-text">
                                    <i class="fas fa-clock"></i>
                                    @appointment.StartTime.ToString(@"hh\:mm") - @appointment.EndTime.ToString(@"hh\:mm")
                                </div>
                            </div>
                        </td>
                        <td>
                            <span class="status-badge @(appointment.Status == "Pending" ? "status-pending" : 
                                                        appointment.Status == "Confirmed" ? "status-confirmed" : 
                                                        "status-cancelled")">
                                @(appointment.Status == "Pending" ? "Bekliyor" : 
                                  appointment.Status == "Confirmed" ? "Onaylandı" : 
                                  "İptal Edildi")
                            </span>
                        </td>
                        <td>
                            <strong style="color: #FF8C42;">@appointment.TotalPrice.ToString("N2") ₺</strong>
                        </td>
                        <td>
                            <div class="action-buttons">
                                @if (appointment.Status == "Pending")
                                {
                                    <form method="post" asp-action="ConfirmAppointment" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@appointment.Id" />
                                        <button type="submit" class="btn-action btn-confirm">
                                            <i class="fas fa-check"></i>
                                            Onayla
                                        </button>
                                    </form>
                                }

                                @if (appointment.Status == "Pending" || appointment.Status == "Confirmed")
                                {
                                    <form method="post" asp-action="RejectAppointment" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@appointment.Id" />
                                        <button type="submit" class="btn-action btn-reject">
                                            <i class="fas fa-times"></i>
                                            Reddet
                                        </button>
                                    </form>
                                }

                                @if (appointment.Status == "Cancelled" || appointment.AppointmentDate < DateTime.Today)
                                {
                                    <form method="post" asp-action="DeleteAppointment" style="display: inline;">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@appointment.Id" />
                                        <button type="submit" class="btn-action btn-delete">
                                            <i class="fas fa-trash-alt"></i>
                                            Sil
                                        </button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="empty-state">
        <i class="fas fa-calendar-times"></i>
        <h3>Randevu bulunamadı</h3>
        <p>
            @(currentFilter == "all" ? "Henüz hiç randevunuz yok." :
              currentFilter == "pending" ? "Bekleyen randevunuz bulunmuyor." :
              currentFilter == "confirmed" ? "Onaylı randevunuz bulunmuyor." :
              currentFilter == "today" ? "Bugün için randevunuz bulunmuyor." :
              currentFilter == "upcoming" ? "Yaklaşan randevunuz bulunmuyor." :
              "İptal edilmiş randevunuz bulunmuyor.")
        </p>
    </div>
}

@section Scripts {
    <script>
        setTimeout(function () {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function (alert) {
                alert.style.animation = 'fadeOut 0.5s ease';
                setTimeout(function () {
                    alert.remove();
                }, 500);
            });
        }, 5000);
    </script>

    <style>
        @@keyframes fadeOut {
            from { opacity: 1; }
            to { opacity: 0; }
        }
    </style>
}
