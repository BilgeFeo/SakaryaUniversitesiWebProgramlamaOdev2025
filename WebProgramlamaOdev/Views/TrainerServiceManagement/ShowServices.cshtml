@model WebProgramlamaOdev.ViewModels.TrainerServicesPageViewModel

@{
    ViewData["Title"] = "Hizmetlerim";
    Layout = "_LayoutTrainerScreen";
}

<style>
    .services-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 30px;
    }

    .services-header h2 {
        color: #333;
        font-size: 28px;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .services-header h2 i {
        color: #FF8C42;
    }

    .services-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
        gap: 20px;
        margin-bottom: 40px;
    }

    .service-card {
        background: white;
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        border-left: 4px solid #FF8C42;
    }

    .service-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 6px 20px rgba(255, 140, 66, 0.3);
    }

    .service-title {
        font-size: 20px;
        font-weight: 600;
        color: #333;
        margin-bottom: 10px;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .service-title i {
        color: #FF8C42;
    }

    .service-description {
        color: #666;
        font-size: 14px;
        margin-bottom: 15px;
        line-height: 1.5;
    }

    .service-info {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 15px;
    }

    .info-badge {
        background: #f8f9fa;
        padding: 8px 12px;
        border-radius: 6px;
        font-size: 13px;
        display: flex;
        align-items: center;
        gap: 6px;
        color: #666;
    }

    .info-badge i {
        color: #FF8C42;
    }

    .service-stats {
        display: flex;
        gap: 15px;
        padding: 12px;
        background: #fff5f0;
        border-radius: 6px;
        margin-bottom: 15px;
    }

    .stat-item {
        flex: 1;
        text-align: center;
    }

    .stat-label {
        font-size: 12px;
        color: #666;
        margin-bottom: 4px;
    }

    .stat-value {
        font-size: 20px;
        font-weight: bold;
        color: #FF8C42;
    }

    .service-actions {
        display: flex;
        gap: 10px;
        padding-top: 15px;
        border-top: 1px solid #e0e0e0;
    }

    .btn-delete {
        flex: 1;
        background: #dc3545;
        color: white;
        border: none;
        padding: 10px;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        transition: all 0.3s ease;
    }

    .btn-delete:hover {
        background: #c82333;
        transform: translateY(-2px);
    }

    /* ============================================
       YENİ HİZMET EKLEME BÖLÜMÜ
       ============================================ */
    .add-service-section {
        background: white;
        border-radius: 10px;
        padding: 25px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        border-left: 4px solid #28a745;
    }

    .add-service-header {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 20px;
    }

    .add-service-header h3 {
        color: #333;
        font-size: 22px;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .add-service-header h3 i {
        color: #28a745;
    }

    .add-form {
        display: flex;
        gap: 15px;
        align-items: flex-end;
    }

    .form-group-add {
        flex: 1;
    }

    .form-label-add {
        display: block;
        font-weight: 600;
        color: #333;
        margin-bottom: 8px;
        font-size: 14px;
    }

    .form-label-add i {
        color: #28a745;
        margin-right: 8px;
    }

    .form-select {
        width: 100%;
        padding: 12px 15px;
        border: 2px solid #28a745;
        border-radius: 6px;
        font-size: 14px;
        background-color: white;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .form-select:focus {
        outline: none;
        border-color: #218838;
        box-shadow: 0 0 0 3px rgba(40, 167, 69, 0.1);
    }

    .form-select:disabled {
        background-color: #f8f9fa;
        cursor: not-allowed;
        border-color: #e0e0e0;
    }

    .btn-add-service {
        background: linear-gradient(135deg, #28a745 0%, #20c997 100%);
        color: white;
        border: none;
        padding: 12px 30px;
        border-radius: 6px;
        font-weight: 600;
        cursor: pointer;
        display: flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(40, 167, 69, 0.3);
        white-space: nowrap;
    }

    .btn-add-service:hover:not(:disabled) {
        background: linear-gradient(135deg, #218838 0%, #1aa179 100%);
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(40, 167, 69, 0.4);
    }

    .btn-add-service:disabled {
        background: #6c757d;
        cursor: not-allowed;
        box-shadow: none;
    }

    .info-message {
        background: #e7f3ff;
        border-left: 4px solid #2196F3;
        padding: 12px 15px;
        border-radius: 6px;
        margin-top: 15px;
        display: flex;
        align-items: center;
        gap: 10px;
        font-size: 14px;
        color: #0d47a1;
    }

    .info-message i {
        color: #2196F3;
        font-size: 18px;
    }

    .empty-state {
        text-align: center;
        padding: 60px 20px;
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
    }

    .empty-state i {
        font-size: 80px;
        color: #FFB380;
        margin-bottom: 20px;
    }

    .empty-state h3 {
        color: #666;
        margin-bottom: 10px;
    }

    .empty-state p {
        color: #999;
        margin-bottom: 30px;
    }

    .alert {
        padding: 15px 20px;
        border-radius: 6px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .alert-success {
        background-color: #d4edda;
        color: #155724;
        border-left: 4px solid #28a745;
    }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border-left: 4px solid #dc3545;
    }

    /* Modal */
    .modal-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 1000;
    }

    .modal-content-custom {
        position: fixed;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        background: white;
        border-radius: 8px;
        max-width: 500px;
        width: 90%;
        box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
    }

    .modal-header-custom {
        background: linear-gradient(135deg, #dc3545 0%, #c82333 100%);
        color: white;
        padding: 20px 25px;
        border-radius: 8px 8px 0 0;
    }

    .modal-header-custom h4 {
        margin: 0;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .modal-body-custom {
        padding: 25px;
    }

    .modal-footer-custom {
        padding: 20px 25px;
        background-color: #f8f9fa;
        border-radius: 0 0 8px 8px;
        display: flex;
        justify-content: flex-end;
        gap: 10px;
    }

    @@media (max-width: 768px) {
        .services-grid {
            grid-template-columns: 1fr;
        }

        .add-form {
            flex-direction: column;
            align-items: stretch;
        }

        .btn-add-service {
            width: 100%;
            justify-content: center;
        }
    }
</style>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        <i class="fas fa-check-circle"></i>
        <span>@TempData["SuccessMessage"]</span>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle"></i>
        <span>@TempData["ErrorMessage"]</span>
    </div>
}

<div class="services-header">
    <h2>
        <i class="fas fa-briefcase"></i>
        Verdiğim Hizmetler (@Model.CurrentServices.Count)
    </h2>
</div>

<!-- MEVCUT HİZMETLER -->
@if (Model.CurrentServices != null && Model.CurrentServices.Any())
{
    <div class="services-grid">
        @foreach (var service in Model.CurrentServices)
        {
            <div class="service-card">
                <div class="service-title">
                    <i class="fas fa-dumbbell"></i>
                    @service.ServiceName
                </div>

                <div class="service-description">
                    @service.Description
                </div>

                <div class="service-info">
                    <div class="info-badge">
                        <i class="fas fa-clock"></i>
                        @service.Duration dakika
                    </div>
                    <div class="info-badge">
                        <i class="fas fa-lira-sign"></i>
                        @service.Price.ToString("N2") ₺
                    </div>
                    <div class="info-badge">
                        <i class="fas fa-building"></i>
                        @service.GymName
                    </div>
                </div>

                <div class="service-stats">
                    <div class="stat-item">
                        <div class="stat-label">Randevu Sayısı</div>
                        <div class="stat-value">@service.AppointmentCount</div>
                    </div>
                </div>

                <div class="service-actions">
                    <button type="button"
                            class="btn-delete"
                            onclick="confirmDelete(@service.ServicesByTrainerId, '@service.ServiceName', @service.AppointmentCount)">
                        <i class="fas fa-trash-alt"></i>
                        Hizmeti Kaldır
                    </button>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="empty-state">
        <i class="fas fa-briefcase"></i>
        <h3>Henüz hizmet eklememişsiniz</h3>
        <p>Aşağıdaki formdan spor salonunuzdaki hizmetleri kendinize ekleyebilirsiniz</p>
    </div>
}

<!-- YENİ HİZMET EKLEME BÖLÜMÜ -->
<div class="add-service-section">
    <div class="add-service-header">
        <h3>
            <i class="fas fa-plus-circle"></i>
            Yeni Hizmet Ekle
        </h3>
    </div>

    @if (Model.AvailableServices != null && Model.AvailableServices.Any())
    {
        <form method="post" asp-action="AddService" class="add-form">
            @Html.AntiForgeryToken()
            
            <div class="form-group-add">
                <label class="form-label-add">
                    <i class="fas fa-list"></i>
                    Eklenebilir Hizmetler
                </label>
                <select name="serviceTypeId" class="form-select" required>
                    <option value="">-- Hizmet Seçin --</option>
                    @foreach (var service in Model.AvailableServices)
                    {
                        <option value="@service.ServiceTypeId">
                            @service.DisplayText
                        </option>
                    }
                </select>
            </div>

            <button type="submit" class="btn-add-service">
                <i class="fas fa-plus-circle"></i>
                Hizmeti Ekle
            </button>
        </form>

        <div class="info-message">
            <i class="fas fa-info-circle"></i>
            <span>
                Sadece <strong>@Model.GymName</strong> salonuna ait hizmetleri ekleyebilirsiniz.
                (@Model.AvailableServices.Count adet hizmet mevcut)
            </span>
        </div>
    }
    else
    {
        <div class="info-message">
            <i class="fas fa-check-circle"></i>
            <span>
                Tüm hizmetleri zaten eklediniz! Spor salonunuzda eklenebilir başka hizmet bulunmamaktadır.
            </span>
        </div>
    }
</div>

<!-- Silme Modal -->
<div id="deleteModal" class="modal-overlay">
    <div class="modal-content-custom">
        <div class="modal-header-custom">
            <h4>
                <i class="fas fa-exclamation-triangle"></i>
                Silme Onayı
            </h4>
        </div>
        <div class="modal-body-custom">
            <p>
                <strong id="serviceName" style="color: #FF8C42;"></strong>
                hizmetini kaldırmak istediğinizden emin misiniz?
            </p>
            <div id="appointmentWarning" style="display: none; background: #fff3cd; padding: 15px; border-radius: 6px; margin-top: 15px;">
                <i class="fas fa-info-circle" style="color: #856404;"></i>
                <span id="appointmentCount" style="color: #856404;"></span>
            </div>
        </div>
        <div class="modal-footer-custom">
            <button type="button" style="background: #6c757d; color: white; padding: 10px 20px; border: none; border-radius: 6px; cursor: pointer;" onclick="closeModal()">
                <i class="fas fa-times"></i>
                İptal
            </button>
            <form id="deleteForm" method="post" asp-action="DeleteService" style="display: inline;">
                @Html.AntiForgeryToken()
                <input type="hidden" name="id" id="serviceIdToDelete" />
                <button type="submit" class="btn-delete">
                    <i class="fas fa-trash-alt"></i>
                    Evet, Kaldır
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete(serviceId, serviceName, appointmentCount) {
            document.getElementById('serviceName').textContent = serviceName;
            document.getElementById('serviceIdToDelete').value = serviceId;

            const warningDiv = document.getElementById('appointmentWarning');
            const countSpan = document.getElementById('appointmentCount');

            if (appointmentCount > 0) {
                countSpan.textContent = `Bu hizmetten ${appointmentCount} randevunuz var.`;
                warningDiv.style.display = 'block';
            } else {
                warningDiv.style.display = 'none';
            }

            document.getElementById('deleteModal').style.display = 'block';
        }

        function closeModal() {
            document.getElementById('deleteModal').style.display = 'none';
        }

        document.getElementById('deleteModal').addEventListener('click', function (e) {
            if (e.target === this) closeModal();
        });

        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') closeModal();
        });

        // Alert auto-close
        setTimeout(function () {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function (alert) {
                alert.style.animation = 'fadeOut 0.5s ease';
                setTimeout(() => alert.remove(), 500);
            });
        }, 5000);
    </script>

    <style>
        @@keyframes fadeOut {
            from { opacity: 1; }
            to { opacity: 0; }
        }
    </style>
}
